<Window
    x:Class="SportsSchool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Спорт школа"
    Width="800"
    Height="450"
    MinWidth="620"
    MinHeight="200"
    Style="{StaticResource MaterialDesignWindow}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="LightCyan" />

        <Grid Grid.Row="0" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <Border
                    Margin="5,8,0,0"
                    Padding="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="#FFA8D8F0"
                    CornerRadius="10">
                    <TextBlock
                        FontSize="15"
                        FontWeight="Bold"
                        Foreground="#FF037583"
                        Style="{DynamicResource MaterialDesignSubtitle2TextBlock}"
                        Text="Спорт школа" />
                </Border>
                <Image
                    Width="30"
                    Height="30"
                    Margin="10,8,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Resources/Handball_Rio_2016.svg.png"
                    Stretch="UniformToFill" />
            </StackPanel>

        </Grid>

        <Grid Grid.RowSpan="2" Grid.Column="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button
                    x:Name="btnHome"
                    Click="btnHome_Click"
                    Content="Главная"
                    FocusVisualStyle="{x:Null}"
                    Visibility="Hidden" />
                <Button
                    x:Name="btnBack"
                    Margin="0,10,0,18"
                    Click="btnBack_Click"
                    Content="Назад"
                    FocusVisualStyle="{x:Null}"
                    Style="{DynamicResource MaterialDesignOutlinedDarkButton}"
                    Visibility="Hidden" />
            </StackPanel>
        </Grid>
        <Frame
            x:Name="startFrame"
            Grid.RowSpan="2"
            Grid.Column="1"
            ContentRendered="startFrame_ContentRendered"
            FocusVisualStyle="{x:Null}"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
