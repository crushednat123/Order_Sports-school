<Page
    x:Class="SportsSchool.Pages.StydentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StydentPage"
    d:DesignHeight="450"
    d:DesignWidth="800"  IsVisibleChanged="Page_IsVisibleChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />
            <RowDefinition Height="52" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <!--  Иконка поиска  -->
                <Button
                    x:Name="btnSearch"
                    Width="50"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Left"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="btnSearch_Click"
                    FocusVisualStyle="{x:Null}"
                    Foreground="Black"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Найти">
                    <StackPanel Margin="0">
                        <materialDesign:PackIcon Kind="Magnify" />
                    </StackPanel>
                </Button>

                <TextBox
                    x:Name="tbSerch"
                    Width="150"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{DynamicResource MaterialDesignTextBox}"
                    TextChanged="tbSerch_TextChanged"
                    ToolTip="Поиск: ФИО" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Border
                Margin="0,-20,0,0"
                Padding="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFF0E8F8"
                CornerRadius="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#FF9864C5"
                    Style="{DynamicResource MaterialDesignSubtitle2TextBlock}"
                    Text="Ученики" />
            </Border>

            <DataGrid
                x:Name="dateStydent"
                Margin="0,24,0,0"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                MouseLeftButtonDown="dateStydent_MouseLeftButtonDown"
                Style="{StaticResource {x:Type DataGrid}}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Header="ФИО"
                        SortMemberPath="StudentSurName">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0} {1} {2}">
                                <Binding Path="StudentSurName" />
                                <Binding Path="StudentName" />
                                <Binding Path="StudentPatronymic" />
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding BirthDate, StringFormat={}{0:dd.MM.yyyy}}"
                        Header="Дата рождения" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding ParentFullName}"
                        Header="Родитель" />

                    <DataGridTemplateColumn
                        Width="*"
                        Header="Виды спорта"
                        SortMemberPath="Sports[0]">
                        <!--  Сортировка по первому виду спорта  -->
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SportsDisplay}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

            </DataGrid>
        </Grid>

        <Grid Grid.Row="2">
            <Button
                x:Name="btnAdStydent"
                Width="200"
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnAdStydent_Click"
                Content="Добавить"
                FocusVisualStyle="{x:Null}" />

            <Button
                x:Name="btnDelete"
                Width="200"
                Margin="10"
                HorizontalAlignment="Right"
                Click="btnDelete_Click"
                Content="Удалить"
                FocusVisualStyle="{x:Null}"
                Style="{DynamicResource MaterialDesignOutlinedDarkButton}" />
        </Grid>
    </Grid>
</Page>
