<Page
    x:Class="SportsSchool.Pages.ChoahPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChoahPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    IsVisibleChanged="Page_IsVisibleChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />
            <RowDefinition Height="52" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <!--  Иконка поиска  -->
                <Button
                    x:Name="btnSearch"
                    Width="50"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Left"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="btnSearch_Click"
                    FocusVisualStyle="{x:Null}"
                    Foreground="Black"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Найти">
                    <StackPanel Margin="0">
                        <materialDesign:PackIcon Kind="Magnify" />
                    </StackPanel>
                </Button>

                <TextBox
                    x:Name="tbSerch"
                    Width="150"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{DynamicResource MaterialDesignTextBox}"
                    TextChanged="tbSerch_TextChanged"
                    ToolTip="Поиск: (ФИО, телефон, спорт)" />
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Border
                Margin="0,-20,0,0"
                Padding="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFF0E8F8"
                CornerRadius="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#FF9864C5"
                    Style="{DynamicResource MaterialDesignSubtitle2TextBlock}"
                    Text="Тренера" />
            </Border>

            <DataGrid
                x:Name="dateCoach"
                Margin="0,24,0,0"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True" 
                MouseDoubleClick="dateCoach_MouseDoubleClick"
                Style="{StaticResource {x:Type DataGrid}}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SurName}"
                        Header="Фамилия" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Имя" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Patronymic}"
                        Header="Отчество" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Sports}"
                        Header="Спорт" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Telephone}"
                        Header="Телефон" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="2">
            <Button
                x:Name="btnAdChoah"
                Width="200"
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnAdChoah_Click"
                Content="Добавить"
                FocusVisualStyle="{x:Null}" />

            <Button
                x:Name="btnDelete"
                Width="200"
                Margin="10"
                HorizontalAlignment="Right"
                Click="btnDelete_Click"
                Content="Удалить"
                FocusVisualStyle="{x:Null}"
                Style="{DynamicResource MaterialDesignOutlinedDarkButton}" />
        </Grid>
    </Grid>
</Page>
