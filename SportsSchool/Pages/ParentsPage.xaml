<Page
    x:Class="SportsSchool.Pages.ParentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ParentsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    IsVisibleChanged="Page_IsVisibleChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="65" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border
                    Margin="0,10,0,0"
                    Padding="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="#FFF0E8F8"
                    CornerRadius="10">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#FF9864C5"
                        Style="{DynamicResource MaterialDesignSubtitle2TextBlock}"
                        Text="Родители" />
                </Border>
            </Grid>

            <DataGrid
                x:Name="dateParents"
                Grid.Row="1"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                MouseDoubleClick="dateParents_MouseDoubleClick"
                Style="{StaticResource {x:Type DataGrid}}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SurName}"
                        Header="Фамилия" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Name}"
                        Header="Имя" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Patronymic}"
                        Header="Отчество" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Address}"
                        Header="Адрес" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Telephone}"
                        Header="Телефон" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Grid.Row="2">
            <Button
                x:Name="btnAdParents"
                Width="200"
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnAdParents_Click"
                Content="Добавить"
                FocusVisualStyle="{x:Null}" />

            <Button
                x:Name="btnDelete"
                Width="200"
                Margin="10"
                HorizontalAlignment="Right"
                Click="btnDelete_Click"
                Content="Удалить"
                FocusVisualStyle="{x:Null}"
                Style="{DynamicResource MaterialDesignOutlinedDarkButton}" />
        </Grid>
    </Grid>
</Page>
