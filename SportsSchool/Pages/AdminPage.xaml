<Page
    x:Class="SportsSchool.Pages.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AdminPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            Width="200"
            Height="210"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#E6E6FA"
            CornerRadius="10">

            <StackPanel>
                <Button
                    x:Name="btnSessionPage"
                    Margin="10"
                    Click="btnSessionPage_Click"
                    Content="Занятии"
                    FocusVisualStyle="{x:Null}" />
                <Button
                    x:Name="btnChoach"
                    Margin="10"
                    Click="btnChoach_Click"
                    Content="Тренера"
                    FocusVisualStyle="{x:Null}" />
                <Button
                    x:Name="btnStydent"
                    Margin="10"
                    Click="btnStydent_Click"
                    Content="Ученики"
                    FocusVisualStyle="{x:Null}" />
                <Button
                    x:Name="btnSport"
                    Margin="10"
                    Click="btnSport_Click"
                    Content="Спорт"
                    FocusVisualStyle="{x:Null}" />

            </StackPanel>
        </Border>

    </Grid>
</Page>
