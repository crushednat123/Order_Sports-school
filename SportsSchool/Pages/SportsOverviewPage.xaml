<Page
    x:Class="SportsSchool.Pages.SportsOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SportsOverviewPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    IsVisibleChanged="Page_IsVisibleChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition />
            <RowDefinition Height="67" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Border
                Margin="0,5,0,0"
                Padding="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFF0E8F8"
                CornerRadius="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#FF9864C5"
                    Style="{DynamicResource MaterialDesignSubtitle2TextBlock}"
                    Text="Спорт" />
            </Border>
        </Grid>
        <DataGrid
            x:Name="dateSport"
            Grid.Row="1"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            MouseLeftButtonDown="dateSport_MouseLeftButtonDown"
            Style="{StaticResource {x:Type DataGrid}}">
            <DataGrid.Columns>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Спорт" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Price, StringFormat={}{0:C}, ConverterCulture=ru-RU}"
                    Header="Цена за месяц" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid
            x:Name="gridAdmin"
            Grid.Row="2"
            Visibility="Hidden">
            <Button
                x:Name="btnAdSport"
                Width="200"
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnAdSport_Click"
                Content="Добавить"
                FocusVisualStyle="{x:Null}" />

            <Button
                x:Name="btnDelete"
                Width="200"
                Margin="10"
                HorizontalAlignment="Right"
                Click="btnDelete_Click"
                Content="Удалить"
                FocusVisualStyle="{x:Null}"
                Style="{DynamicResource MaterialDesignOutlinedDarkButton}" />
        </Grid>
    </Grid>
</Page>
