<Page
    x:Class="SportsSchool.Pages.SessionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool.Pages"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SessionPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    IsVisibleChanged="Page_IsVisibleChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55" />
            <RowDefinition />
            <RowDefinition Height="67" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <!--  Иконка поиска  -->
                <Button
                    x:Name="btnSearch"
                    Width="50"
                    Margin="10,0,10,0"
                    HorizontalAlignment="Left"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Click="btnSearch_Click"
                    FocusVisualStyle="{x:Null}"
                    Foreground="Black"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    ToolTip="Найти">
                    <StackPanel Margin="0">
                        <materialDesign:PackIcon Kind="Magnify" />
                    </StackPanel>
                </Button>

                <TextBox
                    x:Name="tbSerch"
                    Width="200"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Style="{DynamicResource MaterialDesignTextBox}"
                    TextChanged="tbSerch_TextChanged"
                    ToolTip="Поиск: (Тренер, время, спорт)" />

            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Border
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FFF0E8F8"
                CornerRadius="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#FF9864C5"
                    Style="{DynamicResource MaterialDesignSubtitle2TextBlock}"
                    Text="Занятия" />
            </Border>

            <ListView
                Name="listSession"
                Grid.Row="1"
                Margin="0,60,0,0"
                HorizontalContentAlignment="Stretch"
                MouseDoubleClick="listSession_MouseDoubleClick"
                Style="{StaticResource MaterialDesignListView}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Margin" Value="0,0,0,0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="Padding" Value="2" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Border
                                Padding="5"
                                HorizontalAlignment="Stretch"
                                CornerRadius="10"
                                FocusVisualStyle="{x:Null}">

                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#D1E8FF" />
                                        <GradientStop Offset="1" Color="#A3D3FF" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="12"
                                        ShadowDepth="2"
                                        Color="AntiqueWhite" />
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Margin="0,-10,0,0"
                                        HorizontalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                                        Text="{Binding Sports.Name}" />
                                    <StackPanel
                                        Grid.Row="0"
                                        Margin="10,20,10,10"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">
                                        <TextBlock
                                            FontWeight="Bold"
                                            Foreground="{DynamicResource SecondaryHueDarkBrush}"
                                            Text="{Binding Coach.FullName}" />
                                        <TextBlock
                                            FontStyle="Italic"
                                            Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                            Text="{Binding Date, StringFormat='{}{0:dd MMMM yyyy}', ConverterCulture='ru-RU'}" />
                                        <TextBlock
                                            FontStyle="Italic"
                                            Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                            Text="{Binding Time, StringFormat=HH:mm}" />
                                        <TextBlock Foreground="{DynamicResource PrimaryHueDarkBrush}" Text="{Binding Location, StringFormat='Место тренировки: {0}'}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Row="2">
            <Button
                x:Name="btnAdSession"
                Width="200"
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnAdSession_Click"
                Content="Добавить"
                FocusVisualStyle="{x:Null}" />

            <Button
                x:Name="btnDelete"
                Width="200"
                Margin="10"
                HorizontalAlignment="Right"
                Click="btnDelete_Click"
                Content="Удалить"
                FocusVisualStyle="{x:Null}"
                Style="{DynamicResource MaterialDesignOutlinedDarkButton}" />
        </Grid>
    </Grid>

</Page>
