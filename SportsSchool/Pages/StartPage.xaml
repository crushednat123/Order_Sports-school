<Page
    x:Class="SportsSchool.Pages.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SportsSchool.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="StartPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

        <Grid
            x:Name="gridAdmin"
            Grid.ColumnSpan="2"
            Panel.ZIndex="1">

            <Border
                Grid.ColumnSpan="2"
                Margin="20"
                Background="Gray"
                CornerRadius="10"
                Opacity="0.3" />

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource MaterialDesignBody1TextBlock}" Text="Логин" />
                    <TextBox
                        x:Name="tbLogin"
                        Width="105"
                        Margin="28,0,0,0"
                        MaxLength="20"
                        Style="{DynamicResource MaterialDesignDataGridTextColumnEditingStyle}" />

                </StackPanel>

                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <TextBlock Style="{DynamicResource MaterialDesignBody1TextBlock}" Text="Пароль" />
                    <PasswordBox
                        x:Name="tbPassword"
                        Width="105"
                        Margin="20,0,0,0"
                        FocusVisualStyle="{x:Null}"
                        MaxLength="20"
                        Style="{DynamicResource MaterialDesignFloatingHintRevealPasswordBox}" />
                </StackPanel>

                <Button
                    x:Name="btnReg"
                    Margin="0,20,0,0"
                    Click="btnReg_Click"
                    Content="Регистрация"
                    Focusable="False"
                    Style="{DynamicResource MaterialDesignFlatMidBgButton}" />

                <Button
                    x:Name="btnVoiti"
                    Margin="0,20,0,0"
                    Click="btnVoiti_Click"
                    Content="Войти"
                    IsDefault="True"
                    Style="{DynamicResource MaterialDesignFlatMidBgButton}" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
